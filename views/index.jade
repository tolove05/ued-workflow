extends layout

block content
    h1 Add Task

    ul
        -docs.forEach(function(item){
            li
                a(href="/task/#{item._id}")=item.name
        -})

    #container(style="width:500px;")
        form.form-horizontal(action="/add-task",method="post")
                    input(type="text",name="name",placeholder="任务名称")
                    select(name="to")
                        -for(var key in user){
                            option(value="#{key}")=user[key]
                        -}
                    input(type="text",name="demand_side",placeholder="需求方")
                    input(type="text",name="timer",placeholder="小时数")
            .control-group
                label.control-label 备注
                .controls
                    input(type="text",name="note")
            .control-group
                .controls
                    button.btn.btn-primary(type="submit") 增加任务
        h1 Add User
        form.form-horizontal(action="/add-user",method="post")
            .control-group
                label.control-label 用户名
                .controls
                    input(type="text",name="name")
            .control-group
                label.control-label 密码
                .controls
                    input(type="password",name="password")
            .control-group
                label.control-label 角色
                .controls
                    select(name="group")
                        option(value="1") 用户
                        option(value="9") 管理员
            .control-group
                .controls
                    button.btn.btn-primary(type="submit") 添加用户
        h1 Login
        -if(isLogin)
            a(href="/login-out") welcome:#{name}  Login out
        -else
            form.form-horizontal(action="/login",method="post")
                .control-group
                    label.control-label 用户名
                    .controls
                        input(type="text",name="name")
                .control-group
                    label.control-label 密码
                    .controls
                        input(type="password",name="password")
                .control-group
                    .controls
                        button.btn.btn-primary(type="submit") 登陆


